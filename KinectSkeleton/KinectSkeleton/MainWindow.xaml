<Window x:Name="KinectSkeleton" x:Class="KinectSkeleton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <!-- I assume the Kinect window -->
        <Image x:Name="kinectStream" HorizontalAlignment="Left" Height="480" VerticalAlignment="Top" Width="640" Grid.ColumnSpan="2" Margin="0,0,-5,-27.5" />

        <!-- I assume this will be a random image in front -->
        <Image x:Name="staticImage" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="281,151,0,0" Source="http://boardcastapp.com/assets/images/gplay-logo-400.png"/>

    </Grid>
</Window>
